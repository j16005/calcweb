<p id="notice"><%= notice %></p>

<h1>Adds</h1>

<table>
  <thead>
    <tr>
      <th>First</th>
      <th>Second</th>
      <th>Result</th>
      <th>Operator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adds.each do |add| %>
      <tr>
        <td><%= add.first %></td>
        <td><%= add.second %></td>
        <td><%= add.result %></td>
        <td><%= add.operator %></td>
        <td><%= link_to 'Show', add %></td>
        <td><%= link_to 'Edit', edit_add_path(add) %></td>
        <td><%= link_to 'Destroy', add, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

